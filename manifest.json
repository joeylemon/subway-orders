{
    "name": "Subway Order",
    "version": "0.0.1",
    "manifest_version": 2,
    "description": "Automatically place Subway orders",
    "homepage_url": "https://jlemon.org",
    "icons": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    },
    "background": {
        "scripts": [
            "background.js"
        ],
        "persistent": true
    },
    "browser_action": {
        "default_title": "Order Subway",
        "default_popup": "ui.html"
    },
    "permissions": [
        "*://subway.com/*",
        "*://*.subway.com/*",
        "tabs"
    ]
}